<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="3scale.client.class">\ThreeScaleClient</parameter>
    </parameters>

    <services>
        <service id="3scale.client" class="%3scale.client.class%">
            <argument type="string">%3scale.provider_key%</argument>
        </service>
    </services>

</container>